<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_20dp"
    android:layout_marginHorizontal="@dimen/_20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgDevice"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:src="@drawable/ic_devices"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txtDeviceAddress"/>

    <TextView
        android:id="@+id/txtDeviceName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgDevice"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/available_devices"
        android:layout_marginStart="@dimen/_10dp"
        android:textSize="@dimen/_16sp"
        android:textColor="#737171" />

    <TextView
        android:id="@+id/txtDeviceAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/imgDevice"
        app:layout_constraintTop_toBottomOf="@id/txtDeviceName"
        android:text="@string/available_devices"
        android:layout_marginStart="@dimen/_10dp"
        android:textSize="@dimen/_16sp"
        android:textColor="#737171" />

    <ImageView
        android:id="@+id/imgConnect"
        android:layout_width="@dimen/_20dp"
        android:layout_height="@dimen/_20dp"
        android:src="@drawable/ic_link"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txtDeviceAddress"/>

</androidx.constraintlayout.widget.ConstraintLayout>